<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE token  [
        <!ENTITY style SYSTEM "shared.css">
        <!ENTITY MoveAndClose.en SYSTEM "MoveAndClose.en.shtml">
        <!ENTITY payback.en SYSTEM "payback.en.shtml">
        <!ENTITY generate.en SYSTEM "generate.en.shtml">
        <!ENTITY withdraw.en SYSTEM "withdraw.en.shtml">
]>
<ts:token xmlns:ts="http://tokenscript.org/2019/05/tokenscript"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:xml="http://www.w3.org/XML/1998/namespace"
          xsi:schemaLocation="http://tokenscript.org/2019/05/tokenscript ../../schema/tokenscript.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          custodian="false"
>
    <!-- TODO get cdp number from event logs -->
    <!-- TODO delegate all calls via the proxy using execute. -->
    <!--
    <ts:ethereum function="execute" contract="DSProxy">
        <ts:data>
            <ts:address ref="target"/>
            Data includes all the delegate call params that result to this call
            <ts:bytes ref="data"/>
        </ts:data>
    </ts:ethereum>
    -->
    <ts:name>
        <ts:string xml:lang="en">DAI</ts:string>
        <ts:string xml:lang="es">DAI</ts:string>
        <ts:string xml:lang="zh">代币</ts:string>
    </ts:name>
    <ts:contract name="DAIToken" interface="erc20">
        <ts:address network="1">0x89d24a6b4ccb1b6faa2625fe562bdd9a23260359</ts:address>
    </ts:contract>
    <ts:contract name="Medianizer">
        <ts:address network="1">0x729D19f657BD0614b4985Cf1D82531c67569197B</ts:address>
    </ts:contract>
    <ts:contract name="SaiTub">
        <ts:address network="1">0x448a5065aeBB8E423F0896E6c5D525C040f59af3</ts:address>
    </ts:contract>
    <ts:contract name="DSProxyFactory">
        <ts:address network="1">0xA26e15C895EFc0616177B7c1e7270A4C7D51C997</ts:address>
    </ts:contract>
    <ts:contract name="DSProxy">
        <!-- TODO get from lad call
        -->
        <ts:address network="1"/>
    </ts:contract>
    <ts:origins>
        <!-- Define the contract which holds the token that the user will use -->
        <ts:ethereum contract="DAIToken">
        </ts:ethereum>
    </ts:origins>
    <ts:cards>
        <ts:token-card>
            <ts:view-iconified>
            </ts:view-iconified>
            <ts:view>
            </ts:view>
        </ts:token-card>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Withdraw</ts:string>
            </ts:name>
            <ts:attribute-type id="amount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to withdraw</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="e18"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:attribute-type id="data" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Withdraw Data</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="bytes32"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="free" contract="SaiTub">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                        <ts:bytes32 ref="data"/>
                        <ts:uint256 ref="amount"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view>&withdraw.en;</ts:view>
        </ts:action>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Payback</ts:string>
            </ts:name>
            <ts:attribute-type id="amount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to payback</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="e18"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="burn" contract="SaiTub">
                    <ts:data>
                        <ts:uint256 ref="amount"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view>&payback.en;</ts:view>
        </ts:action>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Generate</ts:string>
            </ts:name>
            <ts:attribute-type id="amount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to generate</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="e18"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="mint" contract="SaiTub">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                        <ts:uint256 ref="amount"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view>&generate.en;</ts:view>
        </ts:action>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Move</ts:string>
            </ts:name>
            <ts:attribute-type id="cup" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">CDP data</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="bytes32"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:attribute-type id="to" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">send CDP to</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="address"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="give" contract="SaiTub">
                    <ts:data>
                        <ts:bytes32 ref="cup"/>
                        <ts:address ref="to"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view>&MoveAndClose.en;</ts:view>
        </ts:action>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Close</ts:string>
            </ts:name>
            <ts:attribute-type id="cup" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Close CDP</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="bytes32"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="shut" contract="SaiTub">
                    <ts:data>
                        <ts:bytes32 ref="cup"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view>&MoveAndClose.en;</ts:view>
        </ts:action>

    </ts:cards>
    <ts:attribute-types>
        <!-- Get the USD price of Ether from the Maker Oracle -->
        <ts:attribute-type id="ethPriceUSD" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">EthPriceUSD</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="read" contract="Medianizer" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="DSProxy" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Proxy Address</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum event="Created" contract="DSProxyFactory" as="address">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="cup" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">CDP number</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum event="LogNewCup" contract="SaiTub" as="bytes32">
                    <ts:data>
                        <ts:address ref="DSProxy"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="lad" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">CDP owner</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="lad" contract="SaiTub" as="address">
                    <ts:data>
                        <ts:bytes32 ref="cup"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="ink" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Locked collateral (SKR)</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="ink" contract="SaiTub" as="address">
                    <ts:data>
                        <ts:bytes32 ref="cup"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="tab" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Outstanding normalised debt (Tax Only)</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="tab" contract="SaiTub" as="uint">
                    <ts:data>
                        <ts:bytes32 ref="cup"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="rap" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Outstanding normalised debt</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="rap" contract="SaiTub" as="uint">
                    <ts:data>
                        <ts:bytes32 ref="cup"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="stabilityFee" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Stability Fee</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="tax" contract="SaiTub" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="liquidationRatio" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Liquidation Ratio</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="mat" contract="SaiTub" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="liquidationPenalty" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Liquidation Penalty</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="axe" contract="SaiTub" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>


        <ts:attribute-type id="balance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Balance</ts:string>
                <ts:string xml:lang="zh">餘額</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="balanceOf" contract="DAIToken" as="uint">
                    <ts:data>
                        <ts:uint256 ref="ownerAddress"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="safe" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Is CDP safe?</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="safe" contract="SaiTub" as="bool">
                    <ts:data>
                        <ts:bytes32 ref="cup"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

    </ts:attribute-types>
</ts:token>

